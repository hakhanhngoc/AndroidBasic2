<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple"
        android:orientation="vertical">

    <Button
        android:id="@+id/Go_Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button1_name"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/Go_Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button2_name"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/Go_Button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button3_name"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/Go_Button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button4_name"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/Go_Button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button5_name"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>